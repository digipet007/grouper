        </div>
        <!-- Personality Type drop down -->
        <div class="row">
          <form action="GET">
            <!-- Energy -->
            <div class="input-field col s12 m3">
              <select id="energy-select">
                <option value="" disabled selected>Choose an option</option>
                <option value="1">Introvert</option>
                <option value="2">Extrovert</option>
              </select>
              <label>Energy</label>
            </div>
            <!-- Information -->
            <div class="input-field col s12 m3">
              <select id="information-select">
                <option value="" disabled selected>Choose an option</option>
                <option value="3">Thinking</option>
                <option value="4">Feeling</option>
              </select>
              <label>Information</label>
            </div>
            <!-- Decisions -->
            <div class="input-field col s12 m3">
              <select id="decisions-select">
                <option value="" disabled selected>Choose an option</option>
                <option value="5">Intuition</option>
                <option value="6">Sensing</option>
              </select>
              <label>Decisions</label>
            </div>
            <!-- Organization -->
            <div class="input-field col s12 m3">
              <select id="organization-select">
                <option value="" disabled selected>Choose an option</option>
                <option value="7">Judging</option>
                <option value="8">Perceiving</option>
              </select>
              <label>Organization</label>
            </div>
            <div class="center">
              <button id="submit" class="btn display-results-submit">Display Results</button>
            </div>
          </form>
        </div>
        <div class="divider"></div>
        <div class="row">
          <h4>Profiles</h4>
          <ul id="example-list" class="list-group">
            {{#each examples}}
            <li data-id="{{this.id}}" class="list-group-item">
              <a href="example/{{this.id}}">{{this.text}}</a>
              <button class="btn right result">Result</button>
            </li>
            {{/each}}
          </ul>
        </div>
      </div>
